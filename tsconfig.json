{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@models": ["./src/database/models/"],
      "@connection": ["./src/database/models/connection.ts"],
      "@dals": ["./src/database/dals/implementation/"],
      "@validators": ["./src/validation/validators/"],
      "@errors": ["./src/validation/errors/"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "__tests__/**/*.ts"],
  "exclude": ["babel.config.js", "jest.config.ts", "node_modules", "__tests__/coverage", "dist"]
}
