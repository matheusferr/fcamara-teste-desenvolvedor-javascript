{
  "name": "teste-dev-js",
  "version": "1.0.0",
  "description": " Projeto criado para documentar o teste para a vaga de desenvolvedor backend com Javascript ",
  "main": "index.js",
  "repository": "git@github.com:matheusferr/fcamara-teste-desenvolvedor-javascript.git",
  "author": "Matheus Ferreira <math.ferr@outlook.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.3.0",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "NODE_ENV=prod node ./dist",
    "dev": "NODE_ENV=dev ts-node-dev -r tsconfig-paths/register --rs --pretty --clear --respawn --ignore-watch node_modules ./src",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --detectOpenHandles --coverage false",
    "pretest": "NODE_ENV=test sequelize db:migrate",
    "pretest:watch": "NODE_ENV=test sequelize db:migrate",
    "posttest": "NODE_ENV=test sequelize db:migrate:undo:all",
    "posttest:watch": "NODE_ENV=test sequelize db:migrate:undo:all",
    "prebuild": "rm -rf ./dist",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "migrate:dev": "NODE_ENV=dev sequelize db:migrate",
    "migrate:dev:undo": "NODE_ENV=dev sequelize db:migrate:undo:all",
    "migrate:prod": "NODE_ENV=prod sequelize db:migrate",
    "migrate:prod:undo": "NODE_ENV=prod sequelize db:migrate:undo:all"
  }
}
